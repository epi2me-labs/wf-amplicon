# top-level directory --> take case01
├── case01
│   ├── garbage.txt
│   ├── reads0.fastq
│   ├── reads1.fastq
│   └── reads2.fastq

# take dir01, dir02, dir03
├── case02
│   ├── dir01
│   │   ├── garbage.txt
│   │   ├── reads0.fastq
│   │   ├── reads1.fastq
│   │   └── reads2.fastq
│   ├── dir02
│   │   ├── reads0.fastq
│   │   ├── reads1.fastq
│   │   └── reads2.fastq
│   ├── dir03
│   │   └── reads0.fastq
│   └── dir4
│       └── garbage.txt

